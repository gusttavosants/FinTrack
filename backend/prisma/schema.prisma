// prisma/schema.prisma
datasource db {
  provider = "sqlite"
  
}

generator client {
  provider = "prisma-client-js"
}

// O que você deve escrever abaixo:
model User {
  id                     String    @id @default(uuid())
  name                   String
  email                  String    @unique
  password_hash          String
  reset_password_token   String?   // Token de recuperação
  reset_password_expires DateTime? // Quando o token expira
  created_at             DateTime  @default(now())
  
  @@map("users")
}